    private string FormatContentWithParagraphs(string content)
    {
        if (string.IsNullOrWhiteSpace(content))
            return content;

        // If content already contains HTML tags, return as-is
        if (content.Contains("<") && content.Contains(">"))
            return content;

        // Split content into lines and format as paragraphs
        var lines = content.Split(new[] { '\n', '\r' }, StringSplitOptions.RemoveEmptyEntries);
        var formattedContent = new System.Text.StringBuilder();

        formattedContent.AppendLine("<div class='formatted-lesson-content'>");

        foreach (var line in lines)
        {
            var trimmedLine = line.Trim();
            
            if (string.IsNullOrEmpty(trimmedLine))
            {
                formattedContent.AppendLine("<div style='height: 0.5rem;'></div>");
                continue;
            }

            // Check if it's a heading (starts with numbers, all caps, or specific keywords)
            if (IsHeadingLine(trimmedLine))
            {
                formattedContent.AppendLine($"<h3 class='lesson-heading text-primary fw-bold mt-5 mb-3' style='border-bottom: 3px solid #2196F3; padding-bottom: 0.75rem;'>{trimmedLine}</h3>");
            }
            // Check if it's a list item
            else if (trimmedLine.StartsWith("‚Ä¢") || trimmedLine.StartsWith("-") || 
                     trimmedLine.StartsWith("*") || System.Text.RegularExpressions.Regex.IsMatch(trimmedLine, @"^\d+\."))
            {
                var cleanItem = System.Text.RegularExpressions.Regex.Replace(trimmedLine, @"^[‚Ä¢\-\*\d+\.]\s*", "").Trim();
                formattedContent.AppendLine($"<div class='lesson-list-item mb-2' style='margin-left: 1.5rem; padding-left: 0.75rem; border-left: 3px solid #4CAF50;'><i class='text-success me-2' style='font-size: 1.2rem;'>‚úì</i><span style='font-size: 1rem; line-height: 1.6;'>{cleanItem}</span></div>");
            }
            // Regular paragraph
            else
            {
                formattedContent.AppendLine($"<p class='lesson-paragraph mb-3 text-start' style='font-size: 1rem; line-height: 1.8; color: #333;'>{trimmedLine}</p>");
            }
        }

        formattedContent.AppendLine("</div>");

        return formattedContent.ToString();
    }

    private bool IsHeadingLine(string line)
    {
        return line.Length < 100 && (
            System.Text.RegularExpressions.Regex.IsMatch(line, @"^\d+\.?\s+[A-Z]") || // "1. Something"
            System.Text.RegularExpressions.Regex.IsMatch(line, @"^[A-Z][A-Z\s]{3,}$") || // "ALL CAPS"
            line.Contains("OBJECTIVE") ||
            line.Contains("LEARNING") ||
            line.Contains("SAFETY") ||
            line.Contains("OPERATION") ||
            line.Contains("MAINTENANCE") ||
            line.Contains("FORKLIFT") ||
            line.Contains("COMPONENTS") ||
            line.Contains("ASSESSMENT")
        );
    }
