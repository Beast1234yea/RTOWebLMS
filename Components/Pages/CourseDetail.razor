@code {
    [Parameter]
    public string CourseId { get; set; } = string.Empty;

    private Course? course;
    private Enrollment? enrollment;
    private bool isEnrolled = false;
    private string? currentUserId;
    private int totalLessons = 0;

    protected override async Task OnInitializedAsync()
    {
        // Load course with all related data
        course = await DbContext.Courses
            .Include(c => c.Modules)
                .ThenInclude(m => m.Lessons)
            .Include(c => c.Instructor)
            .FirstOrDefaultAsync(c => c.Id == CourseId);

        if (course != null)
        {
            totalLessons = course.Modules.SelectMany(m => m.Lessons).Count();
        }

        // For demo, get the first user
        // In production, this would use authentication
        var firstUser = await DbContext.Users.FirstOrDefaultAsync();
        if (firstUser != null)
        {
            currentUserId = firstUser.Id;

            // Check if user is enrolled
            enrollment = await DbContext.Enrollments
                .Include(e => e.LessonProgress)
                .FirstOrDefaultAsync(e => e.UserId == currentUserId && e.CourseId == CourseId);

            isEnrolled = enrollment != null;
        }
    }

    private async Task EnrollInCourse()
    {
        if (string.IsNullOrEmpty(currentUserId))
        {
            // In production, redirect to login
            return;
        }

        if (isEnrolled)
        {
            return;
        }

        try
        {
            enrollment = new Enrollment
            {
                UserId = currentUserId,
                CourseId = CourseId,
                Status = EnrollmentStatus.ACTIVE,
                EnrolledAt = DateTime.UtcNow,
                CreatedAt = DateTime.UtcNow,
                UpdatedAt = DateTime.UtcNow
            };

            DbContext.Enrollments.Add(enrollment);
            await DbContext.SaveChangesAsync();

            isEnrolled = true;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error enrolling: {ex.Message}");
        }
    }

    private void ViewLesson(string lessonId)
    {
        if (enrollment != null)
        {
            Navigation.NavigateTo($"/lesson/{lessonId}?enrollmentId={enrollment.Id}");
        }
    }

    private void GoToMyLearning()
    {
        Navigation.NavigateTo("/my-learning");
    }
}
