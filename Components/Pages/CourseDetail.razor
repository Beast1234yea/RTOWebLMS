@page "/course/{courseId}"
@using Microsoft.EntityFrameworkCore
@using RTOWebLMS.Data
@using RTOWebLMS.Models
@using RTOWebLMS.Enums
@inject LmsDbContext DbContext
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>@(course?.Title ?? "Course") - RTO LMS</PageTitle>

@if (course == null)
{
    <div class="text-center p-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    <div class="container my-4">
        <!-- Course Header -->
        <div class="course-header mb-4">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                    <h1 class="course-title">@course.Title</h1>
                    <span class="badge bg-white text-primary fs-6">@course.UnitCode</span>
                </div>
                @if (isEnrolled)
                {
                    <button class="btn btn-light btn-lg" @onclick="GoToMyLearning">
                        Go to My Learning ‚Üí
                    </button>
                }
                else
                {
                    <button class="btn btn-success btn-lg" @onclick="EnrollInCourse">
                        Enroll Now
                    </button>
                }
            </div>
        </div>

        <!-- Course Overview -->
        <div class="content-card mb-4">
            <h3 class="section-title">Course Overview</h3>
            <p class="lead">@course.Description</p>

            <div class="row mt-4">
                <div class="col-md-3">
                    <div class="stat-box">
                        <div class="stat-icon">‚è±</div>
                        <div class="stat-value">@(course.NominalHours ?? 0) hours</div>
                        <div class="stat-label">Duration</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-box">
                        <div class="stat-icon">üìö</div>
                        <div class="stat-value">@course.Modules.Count</div>
                        <div class="stat-label">Modules</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-box">
                        <div class="stat-icon">üìù</div>
                        <div class="stat-value">@totalLessons</div>
                        <div class="stat-label">Lessons</div>
                    </div>
                </div>
                @if (course.Instructor != null)
                {
                    <div class="col-md-3">
                        <div class="stat-box">
                            <div class="stat-icon">üë§</div>
                            <div class="stat-value">@course.Instructor.Name</div>
                            <div class="stat-label">Instructor</div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Course Modules -->
        <div class="content-card">
            <h3 class="section-title mb-4">Course Content</h3>

            @if (!course.Modules.Any())
            {
                <p class="text-muted">No modules available yet.</p>
            }
            else
            {
                <div class="accordion" id="modulesAccordion">
                    @foreach (var module in course.Modules.OrderBy(m => m.OrderIndex))
                    {
                        var moduleId = $"module-{module.Id}";
                        var collapseId = $"collapse-{module.Id}";

                        <div class="accordion-item">
                            <h2 class="accordion-header" id="@moduleId">
                                <button class="accordion-button @(module.OrderIndex == 0 ? "" : "collapsed")"
                                        type="button"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#@collapseId">
                                    <div class="module-header-content">
                                        <span class="module-number">Module @(module.OrderIndex + 1)</span>
                                        <span class="module-title">@module.Title</span>
                                        <span class="lesson-count">@module.Lessons.Count lessons</span>
                                    </div>
                                </button>
                            </h2>
                            <div id="@collapseId"
                                 class="accordion-collapse collapse @(module.OrderIndex == 0 ? "show" : "")"
                                 data-bs-parent="#modulesAccordion">
                                <div class="accordion-body">
                                    @if (!string.IsNullOrEmpty(module.Description))
                                    {
                                        <p class="module-description">@module.Description</p>
                                    }

                                    @if (module.Lessons.Any())
                                    {
                                        <div class="lessons-list">
                                            @foreach (var lesson in module.Lessons.OrderBy(l => l.OrderIndex))
                                            {
                                                var lessonProgress = enrollment?.LessonProgress
                                                    .FirstOrDefault(lp => lp.LessonId == lesson.Id);
                                                var isCompleted = lessonProgress?.Completed ?? false;

                                                <div class="lesson-item">
                                                    <div class="lesson-info">
                                                        @if (isCompleted)
                                                        {
                                                            <span class="lesson-status completed">‚úì</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="lesson-status">‚óã</span>
                                                        }
                                                        <div>
                                                            <div class="lesson-title">@lesson.Title</div>
                                                            @if (lesson.Duration > 0)
                                                            {
                                                                <small class="text-muted">@lesson.Duration min</small>
                                                            }
                                                        </div>
                                                    </div>
                                                    @if (isEnrolled)
                                                    {
                                                        <button class="btn btn-sm btn-primary"
                                                                @onclick="() => ViewLesson(lesson.Id)">
                                                            @(isCompleted ? "Review" : "Start")
                                                        </button>
                                                    }
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <p class="text-muted fst-italic">No lessons in this module yet.</p>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Enroll CTA at bottom -->
        @if (!isEnrolled)
        {
            <div class="enroll-cta mt-4">
                <h4>Ready to start learning?</h4>
                <button class="btn btn-success btn-lg" @onclick="EnrollInCourse">
                    Enroll in this Course
                </button>
            </div>
        }
    </div>
}

